<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="Accidit Preferences"
            class="de.hpi.accidit.eclipse.preferences.MainPreferencePage"
            id="de.hpi.accidit.eclipse.preferences.MainPreferencePage">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="de.hpi.accidit.eclipse.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="Accidit"
            id="de.hpi.accidit.eclipse">
      </category>
      <view
            name="Accidit View"
            icon="icons/sample.gif"
            category="de.hpi.accidit.eclipse"
            class="de.hpi.accidit.eclipse.views.MainView"
            id="de.hpi.accidit.eclipse.views.MainView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="de.hpi.accidit.eclipse.views.MainView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
